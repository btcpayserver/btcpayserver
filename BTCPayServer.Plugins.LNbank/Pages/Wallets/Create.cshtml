@page "/plugins/lnbank/wallets/create"
@model BTCPayServer.Plugins.LNbank.Pages.Wallets.CreateModel

@{
    ViewData.SetActivePage(LNbankNavPages.Wallets, "New LNbank Wallet");
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h2 class="mt-1 mb-4">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-xl-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ReturnUrl" type="hidden" />
            <div class="form-group">
                <label asp-for="Wallet.Name" class="form-label"></label>
                <input asp-for="Wallet.Name" class="form-control" required />
                <span asp-validation-for="Wallet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="LNbank-Create" />
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-page="./Index" class="text-secondary" id="LNbank-Back">Back to Wallets</a>
</p>


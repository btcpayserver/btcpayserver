@page "/Plugins/LNbank/Wallets/Create"
@model BTCPayServer.Plugins.LNbank.Pages.Wallets.CreateModel

@{
    ViewData.SetActivePage(LNbankNavPages.Wallets, "New wallet");
}

<header class="mb-3">
    <h1>@ViewData["Title"]</h1>
</header>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Wallet.Name" class="form-label"></label>
                <input asp-for="Wallet.Name" class="form-control" required />
                <small asp-validation-for="Wallet.Name" class="form-text text-danger"></small>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-page="./Index" class="text-secondary">Back to Wallets</a>
</p>


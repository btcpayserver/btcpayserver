@page "/Plugins/LNbank/Wallets/{walletId}/Delete"
@model BTCPayServer.Plugins.LNbank.Pages.Wallets.DeleteModel

@{
    Model.SetTitle($"Delete \"{Model.Wallet.Name}\"");
}

<header class="mb-3">
    <h1>@ViewData["Title"]</h1>
</header>

<p>Are you sure you want to delete this wallet?</p>
    
<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

<p class="mt-3">
    <a asp-page="./Index" asp-route-walletId="@Model.Wallet.WalletId" class="text-secondary">Back to Wallet</a>
</p>

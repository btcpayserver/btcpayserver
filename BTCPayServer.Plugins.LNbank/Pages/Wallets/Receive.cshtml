@page "/Plugins/LNbank/Wallets/{walletId}/Receive"
@using BTCPayServer.Lightning
@model BTCPayServer.Plugins.LNbank.Pages.Wallets.ReceiveModel

@{
    ViewData.SetActivePage(LNbankNavPages.Receive, "Receive");
}

<header class="mb-3">
    <h1 class="d-inline-block me-2">
        @ViewData["Title"]
        <span class="badge bg-info d-inline-block ms-2 py-2 px-3">@Model.Wallet.Balance.ToUnit(LightMoneyUnit.Satoshi) sats</span>
    </h1>
</header>

@if (!ModelState.IsValid)
{
    <div asp-validation-summary="All" class="alert alert-danger mb-4"></div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mb-4" role="alert">
        @Model.ErrorMessage
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <small asp-validation-for="Description" class="form-text text-danger"></small>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="form-label"></label>
                <input asp-for="Amount" class="form-control text-end hide-number-spin" type="number" style="width:15ch;" required />
                <small asp-validation-for="Amount" class="form-text text-danger"></small>
            </div>
            <div class="form-group">
                <input type="submit" value="Create invoice" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p class="mt-3">
    <a asp-page="./Index" asp-route-walletId="@Model.Wallet.WalletId" class="text-secondary">Back to Wallet</a>
</p>

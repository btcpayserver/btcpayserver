@model BTCPayServer.Components.StoreWalletBalance.StoreWalletBalanceViewModel

<div class="widget store-wallet-balance">
    <h6 class="mb-2">Wallet Balance</h6>
    <header class="mb-3">
        <div class="balance">
            <h3 class="d-inline-block me-1">@Model.Balance</h3>
            <span class="text-secondary fw-semibold">@Model.CryptoCode</span>
        </div>
        <div class="btn-group mt-1" role="group" aria-label="Filter">
            <input type="radio" class="btn-check" name="filter" id="filter-1d">
            <label class="btn btn-link" for="filter-1d">1D</label>
            <input type="radio" class="btn-check" name="filter" id="filter-1w" checked>
            <label class="btn btn-link" for="filter-1w">1W</label>
            <input type="radio" class="btn-check" name="filter" id="filter-1m">
            <label class="btn btn-link" for="filter-1m">1M</label>
            <input type="radio" class="btn-check" name="filter" id="filter-1y">
            <label class="btn btn-link" for="filter-1y">1Y</label>
            <input type="radio" class="btn-check" name="filter" id="filter-all">
            <label class="btn btn-link" for="filter-all">ALL</label>
        </div>
    </header>
    <div id="StoreWalletBalance-@Model.Store.Id" class="ct-chart ct-major-eleventh"></div>
    <script>
        (function () {
            new Chartist.Line('#StoreWalletBalance-@Model.Store.Id', {
                labels: @Safe.Json(Model.Labels),
                series: [@Safe.Json(Model.Series)]
            }, {
                low: 0,
                fullWidth: true,
                showArea: true
            });
        })();
    </script>
</div>

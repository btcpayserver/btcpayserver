@model LoginViewModel
@addTagHelper *, BTCPayServer
@inject SignInManager<ApplicationUser> SignInManager
@inject BTCPayServer.HostedServices.CssThemeManager themeManager

@{
    ViewData["Title"] = "Log in";
}

<section>
    <div>
        <div class="modal-dialog modal-login">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" translate="login">Log In</h4>
                </div>
                <div class="modal-body">
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label for="Email" class="input-group-text"><span class="input-group-addon fa fa-user"></span></label>
                                </div>
                                <input asp-for="Email" class="form-control" placeholder="Email" translate-attr="placeholder:email" required="required"/>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label for="Password" class="input-group-text"><span class="input-group-addon fa fa-lock"></span></label>
                                </div>
                                <input asp-for="Password" class="form-control" placeholder="Password" translate-attr="placeholder:password" required="required"/>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-lg" id="LoginButton" translate="login">Log in</button>
                        </div>
                        <p class="hint-text"><a asp-action="ForgotPassword" translate="forgot_your_password">Forgot your password?</a></p>
                    </form>
                </div>
                @if (themeManager.ShowRegister)
                {
                    <div class="modal-footer">
                    <span translate="dont_have_an_account">Don't have an account?</span>
                    &nbsp;
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" translate="create_an_account">Create one</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

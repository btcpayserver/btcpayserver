@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
@addTagHelper *, BTCPayServer

<section>
    <div>
        <div class="modal-dialog modal-login">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" translate="create_account">Create account</h4>
                </div>
                <div class="modal-body">
                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" asp-route-logon="@ViewData["Logon"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label for="Email" class="input-group-text"><span class="input-group-addon fa fa-user"></span></label>
                                </div>
                                <input asp-for="Email" class="form-control" placeholder="Email" translate-attr="placeholder:email" required="required"/>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label for="Password" class="input-group-text"><span class="input-group-addon fa fa-lock"></span></label>
                                </div>
                                <input asp-for="Password" class="form-control" placeholder="Password" translate-attr="placeholder:password" required="required"/>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label for="ConfirmPassword" class="input-group-text"><span class="input-group-addon fa fa-lock"></span></label>
                                </div>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Repeat password" translate-attr="placeholder:repeat_password" required="required"/>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        @if (ViewData["AllowIsAdmin"] is true)
                        {
                            <div class="form-group">
                                <label asp-for="IsAdmin"></label>
                                <input asp-for="IsAdmin" type="checkbox" class="form-check-inline"/>
                                <span asp-validation-for="IsAdmin" class="text-danger"></span>
                            </div>
                        }
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-lg" id="RegisterButton" translate="create_account">Create account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

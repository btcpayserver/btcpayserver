@model HomeViewModel;
@{
    ViewData["Title"] = "BTCPay Server";
}

@section PageHeadContent
{
    <style>
        .list-group-item .image {
            display: flex;
            flex: 0 0 1rem;
            align-items: center;
            justify-content: center;
        }
        
        .list-group-item .icon {
            width: 1.5rem;
            height: 1.5rem;
            margin: 1rem;
        }
        
        .list-group-item .content {
            flex: 1;
            padding: 1rem 0;
        }
        
        #NotificationsRecent .notification {
            padding: var(--btcpay-space-s) var(--btcpay-space-m) !important;
        }
    </style>
}

<h2>Welcome to your BTCPay Server</h2>

@if (Model.HasStoreWithWallet)
{
    <div class="row">
        <div class="col-lg-8 col-xl-6 pt-3">
            <vc:notifications appearance="Recent" />
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-9 col-xl-6">
            <p class="lead text-secondary">To start accepting transactions, you need to set up a store and wallet.</p>
        
            <div class="list-group mt-4" id="SetupGuide">
                @if (!Model.HasStore)
                {
                    <a asp-controller="UserStores" asp-action="CreateStore" id="SetupGuide-Store" class="list-group-item list-group-item-action d-flex align-items-center">
                        <vc:icon symbol="new-store"/>
                        <div class="content">
                            <h5 class="mb-0">Create your store</h5>
                        </div>
                        <vc:icon symbol="caret-right"/>
                    </a>
                }
                else
                {
                    <div class="list-group-item d-flex align-items-center" id="SetupGuide-StoreDone">
                        <vc:icon symbol="done"/>
                        <div class="content">
                            <h5 class="mb-0 text-success">Create your store</h5>
                        </div>
                    </div>
                }
                    
                @if (!Model.HasStore)
                {
                    <div class="list-group-item list-group-item-success d-flex align-items-center disabled" id="SetupGuide-Wallet">
                        <vc:icon symbol="new-wallet"/>
                        <div class="content">
                            <h5 class="mb-0">Set up a wallet</h5>
                        </div>
                    </div>
                }
                else if (Model.StoreWithoutPaymentMethod != null)
                {
                    <a asp-controller="Stores" asp-action="PaymentMethods" asp-route-storeId="@Model.StoreWithoutPaymentMethod.Id" id="SetupGuide-Wallet" class="list-group-item list-group-item-action d-flex align-items-center">
                        <vc:icon symbol="new-wallet"/>
                        <div class="content">
                            <h5 class="mb-0">Set up a wallet</h5>
                        </div>
                        @if (Model.HasStore)
                        {
                            <vc:icon symbol="caret-right"/>
                        }
                    </a>
                }
                else
                {
                    <div class="list-group-item list-group-item-success d-flex align-items-center" id="SetupGuide-WalletDone">
                        <vc:icon symbol="done"/>
                        <div class="content">
                            <h5 class="mb-0">Set up a wallet</h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

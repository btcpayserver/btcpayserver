                },
                "security": [
                    {
                        "API_Key": [
                            "btcpay.server.canuseinternallightningnode"
                        ],
                        "Basic": []
                    }
                ]
            }
        },
        "/api/v1/server/lightning/{cryptoCode}/address": {
